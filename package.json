{
  "name": "ng-smart-lib",
  "version": "0.0.0-development",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "copy:readme": "copyfiles ./README.md ./projects/ng-smart-lib",
    "format:check": "prettier --list-different 'projects/**/*.ts'",
    "format:write": "prettier --write 'projects/**/*.ts'",
    "test:lib-coverage": "ng test ng-smart-lib --code-coverage --watch=false",
    "report-coverage:lib": "./coverage/ng-smart-lib/lcov.info | codecov",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "npm run copy:readme && ng build ng-smart-lib",
    "build:demo": "ng build ng-smart-lib-showcase --base-href='https://divyanshgupta.github.io/Angular_ng-smart-lib/'",
    "test": "ng test",
    "lint": "ng lint",
    "docs:build": "compodoc -p --tsconfig ./projects/ng-smart-lib/tsconfig.lib.json -n ./projects/ng-smart-lib -d docs --hideGenerator --theme material",
    "publish:demo": "npx angular-cli-ghpages angular-cli-ghpages --repo=https://$ACCESS_TOKEN@github.com/divyanshgupta/Angular_ng-smart-lib.git --name=Divyansh Gupta --email=divyansh.2392@gmail.com --branch gh-pages --dir=./dist/ng-smart-lib-showcase",
    "e2e": "ng e2e",
    "prepare": "husky install",
    "copy:demo:ci": "cp -R dist/ng-smart-lib-showcase ./docs/demo",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.1.4",
    "@angular/common": "~10.1.4",
    "@angular/compiler": "~10.1.4",
    "@angular/core": "~10.1.4",
    "@angular/forms": "~10.1.4",
    "@angular/platform-browser": "~10.1.4",
    "@angular/platform-browser-dynamic": "~10.1.4",
    "@angular/router": "~10.1.4",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1001.7",
    "@angular/cli": "~10.1.4",
    "@angular/compiler-cli": "~10.1.4",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/prompt": "^12.1.4",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^1.0.0-rc.2",
    "codecov": "^3.8.2",
    "codelyzer": "^6.0.0",
    "compodoc": "0.0.41",
    "copyfiles": "^2.4.1",
    "husky": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^11.0.0",
    "ng-packagr": "^10.1.0",
    "prettier": "^2.3.0",
    "protractor": "~7.0.0",
    "semantic-release": "^17.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "projects/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/divyanshgupta/Angular_ng-smart-lib.git"
  }
}
